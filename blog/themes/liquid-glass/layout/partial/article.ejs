<article class="glass-card rounded-3xl overflow-hidden article-card animate-fade-in-up group hover:bg-white/10 transition-all duration-500" style="animation-delay: <%= index * 0.1 %>s">
  <div class="p-6 md:p-10 relative overflow-hidden">
    <!-- Background Glow Effect on Hover -->
    <div class="absolute -right-20 -top-20 w-64 h-64 bg-purple-500/10 rounded-full blur-3xl group-hover:bg-purple-500/20 transition-all duration-700"></div>

    <div class="relative z-10">
      <!-- Post Meta -->
      <div class="flex flex-wrap items-center gap-6 mb-6 text-sm font-medium text-slate-400">
        <time datetime="<%= date_xml(post.date) %>" class="flex items-center gap-2.5">
          <div class="w-8 h-8 rounded-xl bg-white/5 flex items-center justify-center text-purple-400 group-hover:scale-110 transition-transform duration-500">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
          <%= date(post.date, 'MMMM D, YYYY') %>
        </time>

        <% if (post.categories && post.categories.length) { %>
          <div class="flex items-center gap-2.5">
            <div class="w-8 h-8 rounded-xl bg-white/5 flex items-center justify-center text-blue-400 group-hover:scale-110 transition-transform duration-500">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
              </svg>
            </div>
            <% post.categories.each(function(cat) { %>
              <a href="<%- url_for(cat.path) %>" class="hover:text-white transition-colors"><%= cat.name %></a>
            <% }); %>
          </div>
        <% } %>

        <div class="flex items-center gap-2.5">
          <div class="w-8 h-8 rounded-xl bg-white/5 flex items-center justify-center text-emerald-400 group-hover:scale-110 transition-transform duration-500">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
            </svg>
          </div>
          <span><%= wordcount(post.content) %> words</span>
        </div>
      </div>

      <!-- Title -->
      <h2 class="text-2xl md:text-4xl font-black mb-6 tracking-tight leading-tight">
        <a href="<%- url_for(post.path) %>" class="bg-clip-text text-transparent bg-gradient-to-r from-white via-white to-white/50 group-hover:to-purple-300 transition-all duration-500">
          <%= post.title %>
        </a>
      </h2>

      <!-- Excerpt -->
      <div class="text-slate-400 leading-relaxed mb-8 text-lg max-w-3xl group-hover:text-slate-200 transition-colors duration-500">
        <% if (post.excerpt) { %>
          <%- post.excerpt %>
        <% } else { %>
          <%- truncate(strip_html(post.content), {length: 160}) %>
        <% } %>
      </div>

      <div class="flex flex-wrap items-center justify-between gap-6 pt-6 border-t border-white/5">
        <!-- Tags -->
        <div class="flex flex-wrap gap-2">
          <% if (post.tags && post.tags.length) { %>
            <% post.tags.each(function(tag) { %>
              <a href="<%- url_for(tag.path) %>" class="px-4 py-1.5 rounded-full bg-white/5 hover:bg-purple-500/20 text-xs font-bold uppercase tracking-wider text-slate-400 hover:text-purple-300 transition-all duration-300">
                #<%= tag.name %>
              </a>
            <% }); %>
          <% } %>
        </div>

        <!-- Read More Button -->
        <a href="<%- url_for(post.path) %>" class="glass-button px-8 py-3 rounded-2xl font-bold text-sm tracking-widest uppercase hover:scale-105 transition-all duration-300">
          Continue Reading
        </a>
      </div>
    </div>
  </div>
</article>
