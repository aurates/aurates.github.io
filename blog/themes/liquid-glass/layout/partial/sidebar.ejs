<div class="space-y-6">
  <!-- Brand Card -->
  <div class="glass-card rounded-3xl p-6 mb-6 overflow-hidden relative">
    <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-purple-500 to-blue-500"></div>
    <a href="<%- url_for('/') %>" class="group">
      <h1 class="text-3xl font-black italic tracking-tighter text-white group-hover:text-purple-400 transition-colors">
        <%= config.title.toLowerCase().replace(' ', "'s ") %>
      </h1>
    </a>
  </div>

  <!-- Navigation Menu -->
  <nav class="glass-card rounded-3xl p-4">
    <div class="flex flex-col gap-1">
      <a href="<%- url_for('/') %>" class="sidebar-link flex items-center gap-3 px-4 py-3 rounded-2xl transition-all hover:bg-white/5 group">
        <svg class="w-5 h-5 text-slate-400 group-hover:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
        </svg>
        <span class="text-slate-300 font-medium">front page</span>
      </a>

      <a href="<%- url_for('/about') %>" class="sidebar-link flex items-center gap-3 px-4 py-3 rounded-2xl transition-all hover:bg-white/5 group">
        <svg class="w-5 h-5 text-slate-400 group-hover:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
        </svg>
        <span class="text-slate-300 font-medium">about</span>
      </a>

      <!-- Dropdown: Label (Tags) -->
      <div class="relative group/dropdown">
        <button class="w-full sidebar-link sidebar-dropdown-toggle flex items-center justify-between px-4 py-3 rounded-2xl transition-all hover:bg-white/5 group" data-target="tags-dropdown">
          <div class="flex items-center gap-3">
            <svg class="w-5 h-5 text-slate-400 group-hover:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
            </svg>
            <span class="text-slate-300 font-medium">Label</span>
          </div>
          <svg class="w-4 h-4 text-slate-500 transition-transform duration-300 arrow-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path d="M19 9l-7 7-7-7"/>
          </svg>
        </button>
        <div id="tags-dropdown" class="sidebar-dropdown-content overflow-hidden max-h-0 transition-all duration-300 ease-in-out ml-8 pl-4 border-l border-white/10 space-y-1">
          <% site.tags.each(function(tag){ %>
            <a href="<%- url_for(tag.path) %>" class="block py-2 text-sm text-slate-400 hover:text-purple-400 transition-colors">
              # <%= tag.name %>
            </a>
          <% }) %>
        </div>
      </div>

      <!-- Dropdown: Classification (Categories) -->
      <div class="relative group/dropdown">
        <button class="w-full sidebar-link sidebar-dropdown-toggle flex items-center justify-between px-4 py-3 rounded-2xl transition-all hover:bg-white/5 group" data-target="cats-dropdown">
          <div class="flex items-center gap-3">
            <svg class="w-5 h-5 text-slate-400 group-hover:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
            </svg>
            <span class="text-slate-300 font-medium">Classification</span>
          </div>
          <svg class="w-4 h-4 text-slate-500 transition-transform duration-300 arrow-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path d="M19 9l-7 7-7-7"/>
          </svg>
        </button>
        <div id="cats-dropdown" class="sidebar-dropdown-content overflow-hidden max-h-0 transition-all duration-300 ease-in-out ml-8 pl-4 border-l border-white/10 space-y-1">
          <% site.categories.each(function(cat){ %>
            <a href="<%- url_for(cat.path) %>" class="block py-2 text-sm text-slate-400 hover:text-purple-400 transition-colors">
              <%= cat.name %>
            </a>
          <% }) %>
        </div>
      </div>

      <a href="<%- url_for('/archives') %>" class="sidebar-link flex items-center gap-3 px-4 py-3 rounded-2xl transition-all hover:bg-white/5 group">
        <svg class="w-5 h-5 text-slate-400 group-hover:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        <span class="text-slate-300 font-medium">Archive</span>
      </a>

      <button class="w-full sidebar-link flex items-center gap-3 px-4 py-3 rounded-2xl transition-all hover:bg-white/5 group">
        <svg class="w-5 h-5 text-slate-400 group-hover:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
        <span class="text-slate-300 font-medium">Search</span>
      </button>
    </div>
  </nav>

  <!-- Profile Card -->
  <div class="glass-card rounded-[2.5rem] p-8 text-center overflow-hidden relative group">
    <div class="absolute inset-0 bg-gradient-to-b from-purple-500/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
    
    <!-- Avatar -->
    <div class="relative w-24 h-24 mx-auto mb-4 p-1 rounded-3xl bg-gradient-to-br from-purple-400 to-blue-400 shadow-xl overflow-hidden">
      <img src="https://ui-avatars.com/api/?name=<%= config.author %>&background=0D0D1F&color=fff&size=200" alt="<%= config.author %>" class="w-full h-full object-cover rounded-[1.25rem]">
    </div>
    
    <h2 class="text-xl font-bold mb-1"><%= config.author %></h2>
    <p class="text-sm text-slate-500 mb-6"><%= theme.description %></p>
    
    <!-- Stats -->
    <div class="grid grid-cols-3 gap-2 mb-8 border-y border-white/5 py-4">
      <div>
        <div class="text-lg font-bold"><%= site.posts.length %></div>
        <div class="text-[10px] text-slate-500 uppercase tracking-wider">Posts</div>
      </div>
      <div>
        <div class="text-lg font-bold"><%= site.categories.length %></div>
        <div class="text-[10px] text-slate-500 uppercase tracking-wider">Categories</div>
      </div>
      <div>
        <div class="text-lg font-bold"><%= site.tags.length %></div>
        <div class="text-[10px] text-slate-500 uppercase tracking-wider">Tags</div>
      </div>
    </div>
    
    <!-- Social Links -->
    <div class="flex justify-center gap-4 mb-6">
      <a href="<%- url_for('/') %>" class="p-2 rounded-xl glass-button group/icon tooltip" data-tip="Home">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
        </svg>
      </a>
      <a href="<%= theme.social.github %>" target="_blank" class="p-2 rounded-xl glass-button group/icon tooltip" data-tip="GitHub">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/>
        </svg>
      </a>
    </div>

    <!-- Badge -->
    <div class="flex justify-center mb-6">
      <img src="https://img.shields.io/badge/License-BY--NC--SA-orange?style=flat-square&logo=creative-commons" alt="License">
    </div>

    <!-- Back to Main Button -->
    <a href="/" class="glass-button w-full h-12 rounded-2xl flex items-center justify-center gap-2 group transition-all duration-300">
      <svg class="w-4 h-4 text-slate-300 group-hover:text-purple-400 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      <span class="font-bold text-xs tracking-widest uppercase">Go Back Main</span>
    </a>
  </div>

  <!-- Links Card -->
  <div class="glass-card rounded-[2rem] p-6">
    <div class="flex items-center gap-2 mb-4 text-slate-500 font-bold text-xs uppercase tracking-widest">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
      </svg>
      Links
    </div>
    <div class="space-y-2">
      <a href="#" class="block text-sm text-slate-400 hover:text-purple-400 transition-colors">Xiaoyuan's Blog</a>
      <a href="#" class="block text-sm text-slate-400 hover:text-purple-400 transition-colors">LucunJi</a>
    </div>
  </div>
</div>
