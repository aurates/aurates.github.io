<!-- Single Post Page -->
<article class="animate-fade-in mb-12">
  <!-- Post Content Area -->
  <div class="glass-card rounded-[2.5rem] overflow-hidden">
    <!-- Post Header -->
    <header class="p-8 md:p-12 border-b border-white/5 bg-white/5">
      <h1 class="text-4xl md:text-5xl font-bold mb-8 leading-tight text-white tracking-tight">
        <%= page.title %>
      </h1>
      
      <div class="flex flex-wrap items-center gap-x-8 gap-y-4 text-slate-400 text-sm font-medium">
        <div class="flex items-center gap-2">
          <svg class="w-4 h-4 opacity-60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          Published in <span class="text-purple-400"><%= date(page.date, 'YYYY-MM-DD') %></span>
        </div>

        <div class="flex items-center gap-2">
          <svg class="w-4 h-4 opacity-60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          Word count: <span class="text-blue-400"><%= wordcount(page.content) %></span>
        </div>

        <div class="flex items-center gap-2">
          <svg class="w-4 h-4 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          Reading time: <span class="text-emerald-400"><%= min2read(page.content) %> min</span>
        </div>
      </div>
    </header>

    <!-- Post Content -->
    <div class="p-8 md:p-12">
      <div class="prose prose-invert prose-lg max-w-none">
        <%- page.content %>
      </div>
      
      <% if (page.tags && page.tags.length) { %>
        <div class="mt-12 pt-8 border-t border-white/5 flex flex-wrap gap-2">
          <% page.tags.each(function(tag) { %>
            <a href="<%- url_for(tag.path) %>" class="tag-pill">
              #<%= tag.name %>
            </a>
          <% }); %>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Post Navigation -->
  <nav class="grid md:grid-cols-2 gap-6 mt-8">
    <% if (page.prev) { %>
      <a href="<%- url_for(page.prev.path) %>" class="glass-card rounded-[2rem] p-8 group hover:scale-[1.02] transition-all">
        <div class="text-xs font-bold text-slate-500 uppercase tracking-[0.2em] mb-3 opacity-60">← Previous Post</div>
        <p class="text-xl font-bold group-hover:text-purple-400 transition-colors line-clamp-1"><%= page.prev.title %></p>
      </a>
    <% } else { %>
      <div></div>
    <% } %>
    
    <% if (page.next) { %>
      <a href="<%- url_for(page.next.path) %>" class="glass-card rounded-[2rem] p-8 group hover:scale-[1.02] transition-all text-right">
        <div class="text-xs font-bold text-slate-500 uppercase tracking-[0.2em] mb-3 opacity-60">Next Post →</div>
        <p class="text-xl font-bold group-hover:text-purple-400 transition-colors line-clamp-1"><%= page.next.title %></p>
      </a>
    <% } %>
  </nav>
</article>
